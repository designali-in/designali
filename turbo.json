{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_APP_NAME",
    "NEXT_PUBLIC_APP_URL",
    "COMPONENTS_REGISTRY_URL",
    "DOMAIN_URL",
    "NEXTAUTH_URL",
    "PAGE_SIZE",
    "PEXELS_API_KEY",
    "INSTAGRAM_KEY",
    "YOUTUBE_API_KEY",
    "GOOGLE_GENERATIVE_AI_API_KEY",
    "REPLICATE_API_TOKEN",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "DATABASE_URL",
    "DATABASE_URL_UNPOOLED",
    "TURSO_DATABASE_URL",
    "TURSO_AUTH_TOKEN",
    "UPLOADTHING_SECRET",
    "UPLOADTHING_APP_ID",
    "POSTGRES_URL",
    "REGISTRY_URL",
    "RESEND_API_KEY",
    "RESEND_FROM",
    "RESEND_EMAIL_FROM",
    "NEXTAUTH_SECRET",
    "CLOUDINARY_URL",
    "CLOUDINARY_API_KEY",
    "CLOUDINARY_FOLDER",
    "CLOUDINARY_API_SECRET",
    "NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME",
    "CLOUDINARY_CLOUD_NAME",
    "SPOTIFY_CLIENT_ID",
    "SPOTIFY_CLIENT_SECRET",
    "SPOTIFY_REFRESH_TOKEN",
    "STRIPE_WEBHOOK_SECRET",
    "STRIPE_API_KEY",
    "STRIPE_SECRET_KEY",
    "PORT"
  ]
}
