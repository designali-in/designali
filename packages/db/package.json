{
  "name": "@designali/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate -- tsx ./src/migrate.ts",
    "db:push": " drizzle-kit push",
    "db:seed": "-- tsx ./src/seed.ts",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env"
  },
  "dependencies": {
    "@designali/env": "workspace:*",
    "@libsql/client": "^0.6.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@t3-oss/env-core": "^0.10.1",
    "@vercel/postgres": "^0.9.0",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@designali/eslint-config": "workspace:*",
    "@designali/prettier-config": "workspace:*",
    "@designali/tsconfig": "workspace:*",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.22.8",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@designali/prettier-config"
}
