{
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node10",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./*", "./src/*"]
    },
    "outDir": "dist"
  },
  "include": ["src", "../../apps/web/src/components/dicons/categories"],
  "exclude": ["node_modules"]
}
