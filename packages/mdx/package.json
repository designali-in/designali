    "@shikijs/rehype": "^1.2.4",
    "@shikijs/transformers": "^1.2.4",
    "@designali/ui": "workspace:*",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "fast-glob": "^3.3.2",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "hast": "^1.0.0",
    "pluralize": "^8.0.0",
    "react": "^18.3.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "shiki": "^1.2.4",
    "ts-morph": "^22.0.0",
    "unified": "^11.0.4",
