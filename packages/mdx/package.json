      "types": "./dist/index.d.mts"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "types": "./dist/client.d.mts"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,json,md,mdx}": "prettier --cache --write"
  }
